<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/tvMonedaActual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/moneda_actual"
        android:textColor="#673AB7"
        android:textAlignment="center"
        android:textSize="24sp" />

    <Spinner
        android:id="@+id/spMonedaActual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvMonedaCambio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/moneda_cambio"
        android:textColor="#673AB7"
        android:textAlignment="center"
        android:textSize="24sp" />

    <Spinner
        android:id="@+id/spMonedaCambio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvValorCambiar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/valor_a_cambiar"
        android:textColor="#673AB7"
        android:textAlignment="center"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/etValorCambiar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textColor="#673AB7"
        android:textColorHighlight="#301859"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#9D71EC" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnProcesarCambio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/cambiar"
            tools:ignore="ButtonStyle"
            android:textSize="22sp"
            android:onClick="clickConvertir"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tvResultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/resultado"
        android:textColor="#673AB7"
        android:textAlignment="center"
        android:textSize="24sp" />

</LinearLayout>
